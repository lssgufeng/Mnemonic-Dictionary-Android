<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appLogoLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="bottom"
        android:paddingBottom="@dimen/side_padding_half"
        android:orientation="vertical">

        <com.utopiadevelopers.mnemonicdictionary.activity.com.utopiadevelopers.mnemonicdictionary.activity.viewhelper.IconTextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/font_book"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@null"
        android:orientation="vertical"
        android:paddingLeft="@dimen/side_padding"
        android:paddingRight="@dimen/side_padding">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/side_padding_half"
            android:layout_marginRight="@dimen/side_padding_half"
            android:background="@color/utopia_grey" />

        <Button
            android:id="@+id/button_sign_google"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/side_padding_half"
            android:background="@drawable/button_facebook"
            android:text="@string/signup_facebook" />

        <Button
            android:id="@+id/button_sign_facebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_padding"
            android:background="@drawable/button_google"
            android:text="@string/signup_google" />

        <Button
            android:id="@+id/button_sign_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_padding"
            android:background="@drawable/button_signup"
            android:text="@string/sigup" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_padding"
            android:background="@drawable/button_login"
            android:text="@string/login" />

    </LinearLayout>
</LinearLayout>